@page
@model RecruitCatnaphadpr.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "All Companies";
}

<h1>All Companies</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MinimumSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MaximumSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Optionalstartdate)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CPTorOPT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Workfromhome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].JobTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaximumSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Optionalstartdate)
            </td>

            <td class="text-center">
                @if (item.CPTorOPT == true)
                {
                    <span class="badge badge-success">Yes</span> }
                else
                {
                    <span class="badge badge-danger">No</span>
                }
            </td>
            <td class="text-center">
                @if (item.Workfromhome == true)
                {
                    <span class="badge badge-success">Yes</span> }
                else
                {
                    <span class="badge badge-danger">No</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CompanyId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CompanyId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CompanyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
