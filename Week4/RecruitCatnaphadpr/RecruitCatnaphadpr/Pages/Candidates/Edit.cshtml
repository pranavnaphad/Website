@page
@model RecruitCatnaphadpr.Pages.Candidates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Candidate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Candidate.FirstName" class="control-label"></label>
                <input asp-for="Candidate.FirstName" class="form-control" />
                <span asp-validation-for="Candidate.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.LastName" class="control-label"></label>
                <input asp-for="Candidate.LastName" class="form-control" />
                <span asp-validation-for="Candidate.LastName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Candidate.CandidateId" />
            <div class="form-group">
                <label asp-for="Candidate.TargetSalary" class="control-label"></label>
                <input asp-for="Candidate.TargetSalary" class="form-control" />
                <span asp-validation-for="Candidate.TargetSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.OptionalStartdate" class="control-label"></label>
                <input asp-for="Candidate.OptionalStartdate" class="form-control" />
                <span asp-validation-for="Candidate.OptionalStartdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.CompanyId" class="control-label"></label>
                <select asp-for="Candidate.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="Candidate.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.JobTitleId" class="control-label"></label>
                <select asp-for="Candidate.JobTitleId" class="form-control" asp-items="ViewBag.JobTitleId"></select>
                <span asp-validation-for="Candidate.JobTitleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.IndustryId" class="control-label"></label>
                <select asp-for="Candidate.IndustryId" class="form-control" asp-items="ViewBag.IndustryId"></select>
                <span asp-validation-for="Candidate.IndustryId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Candidate.Validpassport" /> @Html.DisplayNameFor(model => model.Candidate.Validpassport)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Workexperience" class="control-label"></label>
                <input asp-for="Candidate.Workexperience" class="form-control" />
                <span asp-validation-for="Candidate.Workexperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Education" class="control-label"></label>
                <input asp-for="Candidate.Education" class="form-control" />
                <span asp-validation-for="Candidate.Education" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Candidate.Children" /> @Html.DisplayNameFor(model => model.Candidate.Children)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Gender" class="control-label"></label>
                <input asp-for="Candidate.Gender" class="form-control" />
                <span asp-validation-for="Candidate.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
